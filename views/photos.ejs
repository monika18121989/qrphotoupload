<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Photos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body onload="getPhotos()">
<div class="container">
    <div class="row">
        <div class="col-12">
            <h1 class="text-center">Photos</h1>
            <div class="box">
                <div id="allphotos" class="box-img">

                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function getPhotos() {
        fetch('/getphotos').then(response => response.json()).then(data => {
            console.log(data);
            var s = "";
            data.forEach(element => {
                s += `<img src="../uploads/${element}" alt="${element}" width="300" height="300" />`;
            })
            document.getElementById("allphotos").innerHTML = s;
            // responseElement.textContent = JSON.stringify(data, null, 2);
        })
    }
</script>

</body>
</html>
